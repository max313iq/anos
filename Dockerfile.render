FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Install LiteLLM with proxy support
RUN pip install --no-cache-dir 'litellm[proxy]==1.49.5'

# Copy configuration files
COPY proxy_config.yaml /app/proxy_config.yaml

# Expose port
EXPOSE 4000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:4000/health/readiness')"

# Start LiteLLM proxy
CMD ["litellm", "--config", "/app/proxy_config.yaml", "--port", "4000", "--host", "0.0.0.0", "--detailed_debug"]
